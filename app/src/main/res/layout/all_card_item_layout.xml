<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/layout_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:background="?attr/colorBackgroundTertiary"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_payment_method"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_icon"
                android:scaleType="centerCrop"
                ></com.makeramen.roundedimageview.RoundedImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">


                <com.mg.shopping.textviewutil.NormalTextview
                    android:id="@+id/txt_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/nm_txt_size"
                    android:textColor="?attr/colorTextQuinary"
                    android:text="Visa Card"></com.mg.shopping.textviewutil.NormalTextview>

                <com.mg.shopping.textviewutil.NormalTextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:textSize="@dimen/sm_txt_size"
                    android:textColor="?attr/colorTextSecondary"
                    android:text="05/23"></com.mg.shopping.textviewutil.NormalTextview>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_selection"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:backgroundTint="?attr/colorBackgroundSenary"
                android:background="@drawable/bg_circle_stroked"
                android:gravity="center">


                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_tick"></ImageView>


            </LinearLayout>


        </LinearLayout>


</RelativeLayout>