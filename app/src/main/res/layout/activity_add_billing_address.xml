<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundSecondary"
        android:orientation="vertical">

        <include
            layout="@layout/product_detail_menu"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.mg.shopping.textviewutil.LabelTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextQuinary"
                    android:textSize="@dimen/lb_txt_size"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    android:text="@string/general"></com.mg.shopping.textviewutil.LabelTextview>

                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    app:corner_radius="7dp"
                    android:visibility="gone"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="15dp"
                    android:background="?attr/colorBackgroundTertiary"
                    android:gravity="center">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:orientation="horizontal"
                            android:gravity="center">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColorHint="?attr/colorTextSecondary"
                                android:gravity="center_vertical"
                                android:hint="@string/first_name"
                                android:background="@drawable/bg_edit_text"
                                ></TextView>


                            <View
                                android:layout_width="8dp"
                                android:layout_height="wrap_content"></View>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:gravity="center_vertical"
                                android:textColorHint="?attr/colorTextSecondary"
                                android:hint="@string/last_name"
                                android:background="@drawable/bg_edit_text"
                                ></TextView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:orientation="horizontal"
                            android:gravity="center">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColorHint="?attr/colorTextSecondary"
                                android:hint="@string/email_address"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></TextView>


                            <View
                                android:layout_width="8dp"
                                android:layout_height="wrap_content"></View>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:gravity="center_vertical"
                                android:hint="@string/mobile_no"
                                android:textColorHint="?attr/colorTextSecondary"
                                android:background="@drawable/bg_edit_text"
                                ></TextView>


                        </LinearLayout>


                    </LinearLayout>



                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

                <com.mg.shopping.textviewutil.LabelTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextQuinary"
                    android:textSize="@dimen/nm_txt_size"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/billing_address"></com.mg.shopping.textviewutil.LabelTextview>

                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:corner_radius="7dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    android:background="?attr/colorBackgroundTertiary">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:layout_marginTop="0dp"
                            android:gravity="center">

                            <com.mg.shopping.edittextutil.NormalEditText
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/address"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></com.mg.shopping.edittextutil.NormalEditText>


                            <View
                                android:layout_width="8dp"
                                android:visibility="gone"
                                android:layout_height="wrap_content"></View>


                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:layout_marginTop="0dp"
                            android:gravity="center">


                            <com.mg.shopping.edittextutil.NormalEditText
                                android:id="@+id/edit_apartment"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/apartment"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></com.mg.shopping.edittextutil.NormalEditText>


                            <View
                                android:layout_width="8dp"
                                android:layout_height="wrap_content"></View>

                            <com.mg.shopping.edittextutil.NormalEditText
                                android:id="@+id/edit_postal_code"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/postal_code"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_weight="1.5"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></com.mg.shopping.edittextutil.NormalEditText>


                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:layout_marginTop="0dp"
                            android:gravity="center">

                            <com.mg.shopping.edittextutil.NormalEditText
                                android:id="@+id/edit_phone"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/phone"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></com.mg.shopping.edittextutil.NormalEditText>


                            <View
                                android:layout_width="8dp"
                                android:visibility="visible"
                                android:layout_height="wrap_content"></View>


                            <com.mg.shopping.edittextutil.NormalEditText
                                android:id="@+id/edit_city"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/city"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></com.mg.shopping.edittextutil.NormalEditText>


                            <TextView
                                android:id="@+id/txt_country"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="@dimen/nm_txt_size"
                                android:textColor="?attr/colorTextSecondary"
                                android:hint="@string/country"
                                android:text="@string/country"
                                android:paddingStart="10dp"
                                android:visibility="gone"
                                android:paddingEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_edit_text"></TextView>


                        </LinearLayout>


                    </LinearLayout>






                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

                <com.mg.shopping.textviewutil.LabelTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextQuinary"
                    android:textSize="@dimen/nm_txt_size"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/special_note"></com.mg.shopping.textviewutil.LabelTextview>


                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    app:corner_radius="7dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="?attr/colorBackgroundTertiary"
                    android:gravity="center">


                    <com.mg.shopping.edittextutil.NormalEditText
                        android:id="@+id/edit_note"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="@string/write_special_notes"
                        android:layout_margin="15dp"
                        android:gravity="start|top"
                        android:paddingStart="10dp"
                        android:paddingTop="15dp"
                        android:background="@drawable/bg_edit_text"
                        android:textColor="?attr/colorTextSecondary"
                        android:textColorHint="?attr/colorTextSecondary"
                        android:textSize="@dimen/nm_txt_size"></com.mg.shopping.edittextutil.NormalEditText>


                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:id="@+id/layout_save"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="15dp"
                    app:corner_radius="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_menu"
                    android:gravity="center">


                    <com.mg.shopping.textviewutil.NormalTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/lb_txt_size"
                        android:textColor="?attr/colorTextTertiary"
                        android:text="@string/save_continue"></com.mg.shopping.textviewutil.NormalTextview>


                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>




            </LinearLayout>

        </ScrollView>




        </LinearLayout>




</RelativeLayout>