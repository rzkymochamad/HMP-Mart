<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/menu_dark_layout"
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="?attr/colorBackgroundTertiary"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/layout_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp">

                            <ImageView
                                android:id="@+id/image_profile"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="2dp"
                                android:src="@drawable/ic_profile"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_profile"
                                android:text="@string/edit_profile"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="?attr/colorTextQuinary" />

                        <RelativeLayout
                            android:id="@+id/layout_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp">

                            <ImageView
                                android:id="@+id/image_fvt"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="2dp"
                                android:src="@drawable/ic_excel_sheet"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_fvt"
                                android:text="@string/privacy_policy"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="?attr/colorTextQuinary" />

                        <RelativeLayout
                            android:id="@+id/layout_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp">

                            <ImageView
                                android:id="@+id/image_payment"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="2dp"
                                android:src="@drawable/ic_backup"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_payment"
                                android:text="@string/about_us"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="?attr/colorTextQuinary"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/layout_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/image_download"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="2dp"
                                android:src="@drawable/star"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_download"
                                android:text="@string/rate_our_app"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="?attr/colorTextQuinary"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/layout_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/image_share"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                android:src="@drawable/ic_share"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_share"
                                android:text="@string/share_app"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="?attr/colorBackgroundTertiary"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/layout_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:visibility="gone"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp">

                            <ImageView
                                android:id="@+id/image_country"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="2dp"
                                android:src="@drawable/ic_location"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.NormalTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_country"
                                android:text="@string/select_country"
                                android:textColor="?attr/colorTextQuinary"
                                android:textSize="@dimen/tagline_text_size" />


                            <com.mg.shopping.textviewutil.NormalTextview
                                android:id="@+id/txt_country"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/nm_txt_size"
                                android:text="Pakistan"
                                android:textColor="?attr/colorTextSecondary" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:visibility="gone"
                            android:background="?attr/colorTextQuinary" />

                        <RelativeLayout
                            android:id="@+id/layout_sign_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:clickable="true"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp">

                            <ImageView
                                android:id="@+id/image_logout"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                android:src="@drawable/ic_logout"
                                android:tint="?attr/colorTextQuinary" />

                            <com.mg.shopping.textviewutil.LabelTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="18dp"
                                android:layout_toEndOf="@+id/image_logout"
                                android:text="@string/logout"
                                android:textColor="?attr/colorBackgroundSenary"
                                android:textSize="@dimen/tagline_text_size" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:rotation="0"
                                android:visibility="gone"
                                android:rotationY="@integer/locale_mirror_flip"
                                android:src="@drawable/ic_next"
                                android:tint="?attr/colorTextQuinary" />

                        </RelativeLayout>

                        
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"></LinearLayout>


    </LinearLayout>


</RelativeLayout>