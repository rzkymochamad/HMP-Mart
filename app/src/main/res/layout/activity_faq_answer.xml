<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorBackgroundSecondary"
        android:gravity="center_horizontal">

        <include
            layout="@layout/menu_dark_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="?attr/colorBackgroundTertiary"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="10dp"
                    android:src="@drawable/product_01"></com.makeramen.roundedimageview.RoundedImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mg.shopping.textviewutil.NormalTextview
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kedos Running Shoes from Adidas"
                        android:textSize="@dimen/nm_txt_size"
                        android:maxLines="3"
                        android:textColor="?attr/colorTextQuinary"></com.mg.shopping.textviewutil.NormalTextview>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.mg.shopping.textviewutil.TaglineTextview
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 7000"
                            android:textSize="@dimen/nm_txt_size"
                            android:textColor="?attr/colorTextPrimary"></com.mg.shopping.textviewutil.TaglineTextview>

                        <com.mg.shopping.textviewutil.TaglineTextview
                            android:id="@+id/txt_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="30% off"
                            android:visibility="gone"
                            android:textSize="@dimen/sm_txt_size"
                            android:textColor="?attr/colorTextSecondary"></com.mg.shopping.textviewutil.TaglineTextview>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"></TextView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?attr/colorBackgroundTertiary"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_rect_filled"
                        android:gravity="center">

                        <com.mg.shopping.textviewutil.NormalTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/xx_sm_txt_size"
                            android:text="Q"
                            android:textColor="?attr/colorTextTertiary"></com.mg.shopping.textviewutil.NormalTextview>


                    </LinearLayout>

                    <com.mg.shopping.textviewutil.TaglineTextview
                        android:id="@+id/txt_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/nm_txt_size"
                        android:textColor="?attr/colorTextQuinary"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:maxLines="3"
                        android:text="GADYSON A9105 Calendar Casual Style Men Wristwatch Full Steel Luminous Display Quartz Watch"></com.mg.shopping.textviewutil.TaglineTextview>



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="?attr/colorBackgroundQuaternary"></TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_rect_filled"
                        android:backgroundTint="?attr/colorTextQuaternary"
                        android:gravity="center">

                        <com.mg.shopping.textviewutil.NormalTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/xx_sm_txt_size"
                            android:text="A"
                            android:textColor="?attr/colorTextTertiary"></com.mg.shopping.textviewutil.NormalTextview>


                    </LinearLayout>

                    <com.mg.shopping.textviewutil.NormalTextview
                        android:id="@+id/txt_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/nm_txt_size"
                        android:textColor="?attr/colorTextQuinary"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:maxLines="3"
                        android:text="Answers (3)"></com.mg.shopping.textviewutil.NormalTextview>



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="?attr/colorBackgroundQuaternary"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_faq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:background="?attr/colorBackgroundSecondary"
                    ></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:corner_radius="25dp"
            android:gravity="center_vertical"
            android:background="?attr/colorBackgroundQuaternary"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:corner_radius="25dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/colorBackgroundTertiary"
                android:padding="2dp"
                android:layout_margin="1dp">


                <com.mg.shopping.edittextutil.NormalEditText
                    android:id="@+id/edit_answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/nm_txt_size"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="1"
                    android:hint="@string/answer_based_on_question"
                    android:textColor="?attr/colorTextSecondary"
                    android:background="?attr/colorBackgroundTertiary"></com.mg.shopping.edittextutil.NormalEditText>


                <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:id="@+id/layout_submit"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    app:corner_radius="25dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?attr/colorBackgroundSenary"
                    android:layout_marginEnd="1dp">


                    <com.mg.shopping.textviewutil.NormalTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorTextTertiary"
                        android:textSize="@dimen/nm_txt_size"
                        android:text="@string/submit"></com.mg.shopping.textviewutil.NormalTextview>


                </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </LinearLayout>


</RelativeLayout>