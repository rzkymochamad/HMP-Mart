<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center">



        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:tint="?attr/colorBackgroundSeptenary"
            android:src="@drawable/ic_home_menu"></ImageView>


        <com.mg.shopping.textviewutil.LabelTextview
            android:id="@+id/txt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sm_txt_size"
            android:layout_marginTop="6dp"
            android:textColor="?attr/colorTextPrimary"
            android:text="@string/home"></com.mg.shopping.textviewutil.LabelTextview>



    </LinearLayout>


</RelativeLayout>