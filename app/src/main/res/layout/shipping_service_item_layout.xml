<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layout_shipping"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/layout_selection"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="?attr/colorBackgroundSenary"
            android:background="@drawable/bg_circle_filled"
            android:visibility="invisible"
            android:gravity="center">


            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_tick"></ImageView>


        </LinearLayout>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_shipping"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="20dp"
            android:src="@drawable/ic_usps"
            ></com.makeramen.roundedimageview.RoundedImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <com.mg.shopping.textviewutil.NormalTextview
                android:id="@+id/txt_shipping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/nm_txt_size"
                android:maxLines="1"
                android:textColor="?attr/colorTextQuinary"
                android:text="USPS Parcel Delivery"></com.mg.shopping.textviewutil.NormalTextview>


            <com.mg.shopping.textviewutil.TaglineTextview
                android:id="@+id/txt_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sm_txt_size"
                android:layout_marginTop="5dp"
                android:textColor="?attr/colorTextSecondary"
                android:text="Delivered within 3 days"></com.mg.shopping.textviewutil.TaglineTextview>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <com.mg.shopping.textviewutil.NormalTextview
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorTextQuinary"
                android:textSize="@dimen/nm_txt_size"
                android:text="US 45"></com.mg.shopping.textviewutil.NormalTextview>


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>